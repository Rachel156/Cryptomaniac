#include <stdio.h>
#include <stdlib.h>
#include "header.h"
int main()
{
    int c;
    printf("Hello!\nFirst of all, enter the number for what type of file would you like to encrypt/decrypt today.\n");
    printf("1: A text file\n2: A binary file\n");
    scanf("%d",&c);
    if (c==1)
    {
        system("cls");
        int k;
        printf("Great! A text file. Would you like to encrypt/decrypt a simple message using public key encryption or input a text file?\n");
        printf("1: Public key encryption\n");
        printf("2: Input a text file\n");
        scanf("%d",&k);
        if (k==1)
        {
            system("cls");
            main_public();
        }
        else if (k==2)
        {
            system("cls");
            input_text_to_array_x_encrypt_decrypt();
        }
        else
        {
            system("cls");
            printf("Invalid entry; execution terminated");
        }

    }
    else if (c==2)
    {
        system("cls");
        binary();
    }
    else
    {
        system("cls");
        printf("Invalid entry; execution terminated");
    }
    return 0;
}
