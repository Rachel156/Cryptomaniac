
#include <stdio.h>
#include <string.h>

void binary_scramble(char*ptr, int length)
{
FILE*binsc=fopen("binary_scramble.txt","w");
int i;
for(i=0;i<length;i+7)
{
    if(ptr[i]==1)
    {
        ptr[i]=0;
    }
    else if(ptr[i]==0)
    {
        ptr[i]=1;
    }
for(i=0;i<length;i++)
{
    fprintf(binsc,"%d",ptr[i]);
}
fclose(binsc);
}
}
void printBits(size_t const size, void const * const ptr)
{
    FILE*bits=fopen("bits_orig.txt","w");
    unsigned char *b = (unsigned char*) ptr;
    unsigned char byte;
    int i, j;

    for (i=size-1;i>=0;i--)
    {
        for (j=7;j>=0;j--)
        {
            byte = (b[i] >> j) & 1;
            fprintf(bits,"%u", byte);
        }
    }
}


int main()
{
    char data[100];
    FILE*myfile=fopen("tt.txt","rb");
    fread(data,sizeof(int),strlen(data),myfile);
    printBits(sizeof(data),&data);

    fclose(myfile);
    FILE*name_in=fopen("bin_orig.txt","r");
    int m=0;
    char x[1000000];      //entire text without spaces can fit in one location
    while (!feof(name_in)) //while you have not reached the end of this file, do this
{
    fscanf(name_in,"%s",&x[m]);       //read name_in file and store characters in x array
}
    binary_scramble(x,10000);

    return 0;
}
